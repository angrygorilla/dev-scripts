#	
	. tui
	script_version=0.3
#
#	Title
#
	title="$OA_TITLE - RPM Handler - List built packages"
	[[ ! list = $(basename $0) ]] && tui-title "$title ($script_version)"
	oPWD="$(pwd)"
#
#	Variables
#
	OF=""
	if [[ -z "$4" ]] # || [[ ! -z "$LBL" ]]
	then	#echo "less args"
		if [[ -d "$DIR_CFG/$1" ]]
		then	LBL="$1"
			OF="$2"
		else	tui-echo "Please select the label to work with:"
			select LBL in $(cd "$DIR_CFG";ls);do break;done
		fi
	else	LBL="$4"
		OF="$5"
	fi
	
	source "$CONF_RPM"
	source "$DIR_CFG/$LBL/$LBL.conf"
	source "$DIR_CFG/$LBL/rpm.conf"
#
#	Display
#
	if [[ ! -z "$OF" ]] 
	then	# This works
		[[ -d "$(dirname $OF)" ]] || mkdir -p "$(dirname $OF)"
		touch "$OF"
		list=$(find "$rpm_builddir/"|grep "$prj_name")
		echo "$list"|grep rpm$ > "$OF"
	else	# But here is no output
		cd "$rpm_builddir/"
		list=$(find "$rpm_builddir/"|grep rpm$|grep "$prj_name")
		if [[ -z "$list" ]]
		then	tui-status 1 "No packages for \"$prj_name\" found..."
		else	echo "$list"|while read line;do tui-echo "${line:2}";done
		fi
		#find $rpm_builddir|grep $prj_name|grep rpm$
	fi
	cd "$oPWD"
