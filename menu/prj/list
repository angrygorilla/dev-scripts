#
#	
	script_version=0.1
#
#	Title
#
	title="$OA_TITLE - List project modules"
	tui-title "$title ($script_version)"
#
#	Variables
#
	LBL=""
	cd "$DIR_CFG"
	[[ -z "$LBL" ]] && list=($(ls|grep -v "\."))
#
#	Display
#
	for L in "${list[@]}";do
		S=$(tui-conf-get "$L/$L.conf" "prj_name")
		uses=""
		for T in rpm livecd git
		do	[[ -f "$L/$T.conf" ]] && \
				uses+=" $T"
		done
		tui-echo "$S ($L) uses:" "$uses"
	done
